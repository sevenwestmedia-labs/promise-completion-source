{
    "name": "promise-completion-source",
    "version": "0.0.0-development",
    "description": "An object which controls completion of the .promise key",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "prepack": "yarn verify && yarn build",
        "build": "tsc -p tsconfig.build.json",
        "lint": "yarn tslint --project tsconfig.build.json",
        "test": "jest",
        "verify": "yarn tsc -p tsconfig.json && yarn test && yarn lint",
        "cz": "git-cz"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "keywords": [
        "promise",
        "async"
    ],
    "author": "Jake Ginnivan",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^24.0.18",
        "commitizen": "^4.0.3",
        "cz-conventional-changelog": "^3.0.2",
        "jest": "^24.9.0",
        "semantic-release": "^15.13.2",
        "ts-jest": "^24.0.2",
        "ts-lint": "^4.5.1",
        "tslint": "^5.12.0",
        "tslint-config-prettier": "^1.17.0",
        "tslint-eslint-rules": "^5.4.0",
        "typescript": "^3.2.2"
    }
}
